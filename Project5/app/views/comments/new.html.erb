<!-- Displays comments form where user can add a comment for the photo whose primary key is "id" -->

<% if @photo then %>
	<% @title = "Make Comment" %>

	<%= form_for(@comment, url: {:action => :create, :id => @photo.id}, :html=>{:class=> "comments_box"}) do |f| %>
	    <h2>Make a comment:</h2>
	    <ul class = "form_items">
		    <li><%= f.text_area(:comment, :class => "form_field comment_field") %></li>
		    <li><%= f.hidden_field(:user_id, :value => session[:current_user_id]) %></li>
		    <li><%= f.hidden_field(:photo_id, :value => @photo.id) %></li>
		    <li><%= f.hidden_field(:date_time, :value => DateTime.now) %></li>
		    <li><%= f.submit("Post", :class => "form_button comment_button") %></li>
	    	<li><img class = "photo_for_comments" src="/assets/<%= @photo.file_name %>"/></li>
	    </ul>
	<% end %>

<% else %>
	<% @title = "Page Not Found" %>
	<h1>Oh no! That photo does not exist! :(</h1>
<% end %>