<% @title = "Users" %>

<!-- Displays list of all users in the database.
 User names are links that link to the photos
 for that user -->
<p>Index of users:</p>
<table class="users_table" cellspacing="0">
	<% @users.each do |user| %>
		<% id = user.id %>
		<tr class="<%= cycle('odd', 'even') %>">
			<td class="users_table_cell">
				<a class="user_link" href = "/photos/index/<%= id %>">
					<%= id.to_s + ". " + user.full_name %>
				</a>
			</td>
		</tr>
	<% end %>
</table>